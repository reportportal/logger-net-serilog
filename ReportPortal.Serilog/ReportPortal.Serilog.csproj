<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net45;</TargetFrameworks>

    <Version>1.0.0</Version>
    <Description>Sink for Serilog to report log messages into ReportPortal</Description>
    <Authors>Nikolay Borisenko, Report Portal Community</Authors>
    
    <PackageLicenseUrl>https://raw.githubusercontent.com/reportportal/logger-net-serilog/master/LICENSE</PackageLicenseUrl>
    <PackageIconUrl>https://raw.githubusercontent.com/reportportal/logger-net-serilog/master/Logo.png</PackageIconUrl>
    <PackageProjectUrl>http://reportportal.io</PackageProjectUrl>
    <RepositoryUrl>https://github.com/reportportal/logger-net-serilog</RepositoryUrl>
    
    <RepositoryType>GitHub</RepositoryType>
    <PackageTags>reportportal testing serilog</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="ReportPortal.Shared" Version="2.0.4" />
    <PackageReference Include="Serilog" Version="2.0.0" />
  </ItemGroup>

</Project>
